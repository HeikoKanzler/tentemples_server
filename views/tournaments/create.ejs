<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="create" appConnect="local" components="{dmxBrowser:{},dmxNotifications:{},dmxValidator:{}}" -->
<div class="container">
  <%- await include('/partials/page_heading', Object.assign({}, locals, {heading:'Create New Tournament'})) %>

  <div class="row">
    <div class="col mt-2">
      <form is="dmx-serverconnect-form" id="create_tournament" method="post" action="/api/tournament/create" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-on:success="global_notifications.success('Tournament created');create_tournament.reset();global_browser.goto('/tournaments/list/',true)" dmx-on:error="global_notifications.danger('Oops. Something went wrong.')">
        <div class="form-group mb-3 row">
          <label for="inp_tenant_id" class="col-sm-2 col-form-label">Tenant</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="inp_tenant_id" name="tenant_id" aria-describedby="inp_tenant_id_help" placeholder="Enter Tenant ID" required="" data-rule-number="" min="1" data-rule-min="1">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <label for="inp_name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inp_name" name="name" aria-describedby="inp_name_help" placeholder="Enter Name" required="">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <label for="inp_title" class="col-sm-2 col-form-label">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inp_title" name="title" aria-describedby="inp_title_help" placeholder="Enter Title">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <label for="inp_description" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inp_description" name="description" aria-describedby="inp_description_help" placeholder="Enter Description">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <label for="inp_scope" class="col-sm-2 col-form-label">Scope</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="inp_scope" name="scope" aria-describedby="inp_scope_help" placeholder="Enter Scope" min="0" data-rule-min="0" required="" max="2" data-rule-max="2">
          </div>
        </div>
        <div class="form-group mb-3 row">
          <div class="col-sm-2">&nbsp;</div>
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" dmx-bind:disabled="state.executing">Save <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>
          </div>
        </div>
      </form>
    </div>

  </div>
</div>
<meta name="ac:route" content="/tournaments/create">