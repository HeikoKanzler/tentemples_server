<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="list" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxBrowser:{},dmxFormatter:{}}" -->
<section>
  <dmx-serverconnect id="get_tournaments" url="/api/tournament/list"></dmx-serverconnect>
  <div is="dmx-browser" id="browser1"></div>
</section>


<div class="container">
  <%- await include('/partials/page_heading', Object.assign({}, locals, {heading:'Tournaments'})) %>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>

            <th>Tournament</th>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Scope</th>
            <th>Tenant</th>
            <th scope="row" class="text-warning">Actions</th>
          </tr>
        </thead>
        <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="get_tournaments.data.tournaments" id="tableRepeat2">
          <tr>

            <td dmx-text="tournament_id"></td>
            <td dmx-text="name"></td>
            <td dmx-text="title"></td>
            <td dmx-text="description"></td>
            <td dmx-text="scope"></td>
            <td dmx-text="tenant_id"></td>
            <td><button id="btn_challenges" class="btn btn-info btn-sm" dmx-on:click="browser1.goto('/tournaments/challenges/list/'+tournament_id,true)"><i class="fas fa-info"></i></button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<meta name="ac:route" content="/tournaments/list/">